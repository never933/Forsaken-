local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "NeverHubScriptDisplay" 
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui") 

local TextLabel = Instance.new("TextLabel")
TextLel.Name = "NeverHubScScriptText"
TextLabel.Parent = ScreenGui

TextLabel.Text = "Never Hub script"
TextLabel.Size = UDim2.new(0.3, 0, 0.1, 0)
TextLabel.Position = UDim2.new(0.35, 0, 0.45, 0) 
TextLabel.BackgroundColor3 = Color3.fromRGB(255, 0, 0) 
TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255) 
TextLabel.Font = Enum.Font.SourceSansBold
TextLabel.TextSize = 24 
TextLabel.TextScaled = true
TextLabel.TextStrokeTransparency = 0 
TextLabel.ZIndex = 10 
TextLabel.BorderSizePixel = 0 

local delay_time = 3 

delay(delay_time, function()
    if ScreenGui and ScreenGui.Parent then
        ScreenGui:Destroy() 
    end
end)

while task.wait() do
    local success, errorMsg = pcall(function()
        local Sprinting = game:GetService("ReplicatedStorage").Systems.Character.Game.Sprinting
        local stamina = require(Sprinting)
        
        stamina.MaxStamina = 1000
        stamina.MinStamina = -20
        stamina.StaminaGain = 1000  
        stamina.StaminaLoss = 0     
        stamina.SprintSpeed = 40    
        stamina.StaminaLossDisabled = true  
    end)
    
    if not success then
        warn("Ошибка в скрипте:", errorMsg)
    end
end
